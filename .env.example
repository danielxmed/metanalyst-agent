# LLM APIs (pelo menos uma é obrigatória)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Tavily Search API (obrigatório)
TAVILY_API_KEY=tvly-your-tavily-key-here

# Database Configuration
DATABASE_URL=postgresql://metanalyst:metanalyst123@localhost:5432/metanalyst

# Optional: Preferred LLM provider
PREFERRED_LLM_PROVIDER=openai  # ou anthropic

# Optional: Model configurations
OPENAI_MODEL=gpt-4-1106-preview
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Optional: Embeddings model
EMBEDDINGS_MODEL=text-embedding-3-small

# Optional: Vector store configuration
VECTOR_STORE_PATH=./vector_stores/
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# Optional: Search configuration
MAX_SEARCH_RESULTS=50
MIN_RELEVANCE_SCORE=0.7

# Optional: Analysis configuration
MIN_STUDIES_FOR_ANALYSIS=3
CONFIDENCE_LEVEL=0.95